@inproceedings{ ISI:000320654000223,
Author = {Le Ny, Jerome and Pappas, George J.},
Book-Group-Author = {{IEEE}},
Title = {{Differentially Private Kalman Filtering}},
Booktitle = {{2012 50TH ANNUAL ALLERTON CONFERENCE ON COMMUNICATION, CONTROL, AND
